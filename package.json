{
  "name": "@vinicunca/unocss-preset-monorepo",
  "type": "module",
  "version": "1.0.0-beta.1",
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm -r -F=./packages/* run build",
    "stub": "pnpm -r -F=./packages/* --parallel run stub",
    "dev": "pnpm stub",
    "release": "pnpm lint:fix && bumpp -r",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:update": "vitest --update",
    "play": "pnpm -C playground run dev",
    "taze": "taze major -wIr",
    "typecheck": "tsc --noEmit",
    "publish:ci": "pnpm -F=./packages/core run publish:ci",
    "build:docs": "pnpm -F=./docs run build",
    "fb:deploy": "firebase deploy --only hosting:unocss"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@vinicunca/eslint-config": "catalog:",
    "@vinicunca/perkakas": "catalog:",
    "@vinicunca/unocss-preset": "workspace:*",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "simple-git-hooks": "catalog:",
    "taze": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "unocss": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
